<launch>
    <node name="lidar" pkg="rplidar_ros" type="rplidarNode" output="screen">
        <remap from="/scan" to="laser_scan"/>
        <param name="inverted" type="bool" value="false"/>
        <param name="frame_id" type="string" value="laser"/>
        <param name="angle_compensate" type="bool" value="true"/>
        <param name="serial_baudrate" type="int" value="1000000"/>
        <param name="serial_port" type="string" value="/dev/ttyUSB0"/>
    </node>
    <node name="laser" pkg="navigation" type="lidar" />
    <node name="robot2lidar" pkg="tf" type="static_transform_publisher"
          args="0.2 0 0 0 0 0 base_link laser 100" />
</launch>
